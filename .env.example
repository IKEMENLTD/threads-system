# ========================================
# Threads Automation System Environment Variables
# ========================================

# JWT Configuration
JWT_SECRET=your-secret-key-here

# Server Configuration
NODE_ENV=development
PORT=8888
HOST=0.0.0.0

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here

# Database Configuration (if using PostgreSQL directly)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
DB_HOST=localhost
DB_PORT=5432
DB_NAME=threads_system
DB_USER=postgres
DB_PASSWORD=postgres

# Virtual Display Configuration (Linux/WSL)
DISPLAY=:99
DEBIAN_FRONTEND=noninteractive

# Browser Configuration
CHROME_EXECUTABLE_PATH=/usr/bin/google-chrome-stable
CHROMEDRIVER_PATH=/usr/local/bin/chromedriver

# Threads Credentials (optional - can be entered via UI)
THREADS_USERNAME=
THREADS_PASSWORD=

# Render Deployment
RENDER=false